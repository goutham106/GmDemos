<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/adapterLinearBase">

    <com.gm.gmannotation.customview.CustomTextView
        android:id="@+id/userNameTextView"
        style="@style/Custom.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:fontName="@string/roboto_bold" />

    <com.gm.gmannotation.customview.CustomTextView
        android:id="@+id/userphoneNumberTextView"
        style="@style/Custom.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:fontName="@string/roboto_condensed_regular" />
</LinearLayout>